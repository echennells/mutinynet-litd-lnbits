# Example environment file for Mutinynet Lightning stack

# Network selection: "mutinynet" or "signet" (default: mutinynet)
NETWORK=mutinynet

# External IP for Lightning node announcement
EXTERNAL_IP=your.external.ip.here

# Digital Ocean API key for infrastructure management
# Get from: https://cloud.digitalocean.com/account/api/tokens
DO_API_KEY=your-digital-ocean-api-key-here

# Bitcoin RPC credentials (for external node)
BITCOIN_RPC_HOST=45.79.52.207
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASS=bitcoin
BITCOIN_ZMQ_HOST=45.79.52.207

# LNbits configuration
LNBITS_ADMIN_UI=false
DEBUG=false